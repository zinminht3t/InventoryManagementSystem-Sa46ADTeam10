@model LUSSISADTeam10Web.Models.Clerk.InventoryCheckViewModel

@{
    ViewBag.Title = "Adjustment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Adjustment Form</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                    <li><a href="@Url.Action("Inventory", "Clerk")">Inventory Check</a></li>
                    <li class="active">Adjustment Form</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">


        <div class="card">

            <div class="card-body">
                <h5 class="text-sm-center text-info"> <i class="ti-marker-alt fa-3x"></i><br /> Adjustment Form</h5><br />

                <div class="row">
                    <div class="col-sm-12">

                        <form asp-action="Adjustment" asp-controller="Clerk" method="post">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <tr>
                                    <th style="text-align:center">Category</th>
                                    <th style="text-align:center">Items</th>
                                    <th style="text-align:center">Stock</th>
                                    <th style="text-align:center">Current Qty</th>
                                    <th style="text-align:center">UOM</th>
                                    <th style="text-align:center">Location</th>
                                    <th style="text-align:center">Reason</th>
                                </tr>

                                @foreach (var item in Model.Invs)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CatName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemDescription)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Stock)
                                        </td>
                                        <td style="column-width:inherit">
                                            <input type="number" name="Current" asp-for="Current" required min="0" value="@item.Current" class="form-control" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Uom)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ShelfLocation)
                                            @Html.DisplayFor(modelItem => item.ShelfLevel)
                                        </td>
                                        <td>
                                            <textarea name="Reason" id="textarea-input" required rows="2" placeholder="Reason for Discrepancy..." class="form-control"></textarea>
                                            <input type="hidden" name="InvID" asp-for="@Model.InvIDs" value="@item.Invid" />
                                        </td>
                                    </tr>
                                }

                            </table>
                            <br />
                            <input type="submit" value="Submit" class="btn btn-outline-success pull-right" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

